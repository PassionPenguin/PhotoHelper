<com.passionpenguin.photohelper.views.SquareSizeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="2dp">

    <ImageView
        android:id="@+id/ivPhotoContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo_content"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/vgCheckboxWrap"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/ivCheckBox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:button="@drawable/ic_checkbox" />

        <TextView
            android:id="@+id/ivCheckedItemCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

</com.passionpenguin.photohelper.views.SquareSizeConstraintLayout>